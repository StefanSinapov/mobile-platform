<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestProject.Mobile.Views.CameraPage"
             Title="CameraPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button Text="Take a photo!" x:Name="TakePhotoButton" Clicked="TakePhotoButton_Clicked"/>
            <Button Text="Or pick from library" Clicked="PickPhotoButton_Clicked" />
            <Image x:Name="CapturedPhoto" Aspect="AspectFit"  HeightRequest="400" WidthRequest="400" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>